{
  "name": "@deernetwork/type-definitions",
  "version": "0.4.3",
  "description": "Polkadot.js type definations for Deer Network",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "generate": "yarn generate:defs && yarn generate:meta",
    "generate:defs": "ts-node --skip-project node_modules/.bin/polkadot-types-from-defs --package '.' --endpoint ./deer.json --input ./src/interfaces",
    "generate:meta": "ts-node --skip-project node_modules/.bin/polkadot-types-from-chain --package '.' --endpoint ./deer.json --output ./src/interfaces",
    "lint": "eslint .",
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist",
    "verify": "ts-node ./scripts/verify.ts",
    "genTypes": "ts-node ./scripts/genTypes.ts",
    "prepublishOnly": "npm run -s clean && npm run -s build"
  },
  "devDependencies": {
    "@babel/runtime": "^7.16.3",
    "@polkadot/api": "^6.9.2",
    "@polkadot/typegen": "^6.9.2",
    "@types/node": "^16.11.9",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.3.0",
    "typescript": "^4.5.2"
  }
}
